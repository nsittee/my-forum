{
  "name": "my-forum-server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "tsc": "tsc",
    "server:install": "npm ci",
    "server:build": "npm run tsc",
    "server:dev": "nodemon --exec ts-node src/server.ts",
    "client:install": "cd src/client/ && npm ci",
    "client:build": "cd src/client/ && npm run build && mv build ../../dist/",
    "client:dev": "cd src/client/ && npm start",
    "all:install": "npm run server:install && npm run client:install",
    "clean": "rm -rf dist && rm -rf node_modules && rm -rf src/client/node_modules",
    "ci:build": "npm run clean && npm run server:install && npm run server:build && npm run client:install && npm run client:build",
    "ci:dev": "start http://localhost:8080 && start http://localhost:8080/api/subs && node dist/server.js",
    "ci:start": "npm run ci:build && npm start",
    "start": "NODE_ENV=production node dist/server.js",
    "dev": "concurrently \"npm run client:dev\" \"npm run server:dev\""
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.11.0",
    "morgan": "^1.10.0",
    "mui-rff": "^3.0.10",
    "socket.io": "^4.2.0",
    "typescript": "^4.3.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.4.11",
    "ts-node": "^10.1.0"
  }
}